{% trans_default_domain 'FOSUserBundle' %}


<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                <h1>Login Form</h1>
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'Username'|trans }}" required="required" />

                <input type="password" class="form-control" name="_password" placeholder="{{ 'Password'|trans }}" required="required" />

                <div>
                    <span class="text-left">
                        <input type="checkbox" class="flat" name="_remember_me" value="on" />
                        {{ 'Remember me'|trans }}
                    </span>
                    <input type="submit" class="btn btn-default submit" name="_submit" value="{{ 'Log in'|trans }}" />
                </div>
                <br />
                <div class="separator">
                    <p class="change_link">New to site?
                        <a href="{{ path('fos_user_registration_register') }}">{{ 'Register Account'|trans({}, 'FOSUserBundle') }}</a>
                    </p>

                    <div class="clearfix"></div>
                    <br />

                    <div>
                        <h1><i class="fa fa-cubes"></i> CRM-app</h1>
                        <p>Â©2016 All Rights Reserved. CRM-app. Privacy and Terms</p>
                    </div>
                </div>

            </form>
        </section>
    </div>
</div>